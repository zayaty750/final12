<div class="friend bg-white rad-6 p-20 p-relative">
  <div class="contact">
  </div>
  <div class="txt-c">
    <img class="rad-half mt-10 mb-10 w-100 h-100" src="/images/Admin/avatar.png" alt="" />
    <h4 class="m-0">
      <%= User.name %>
    </h4>
    <p class="c-grey fs-13 mt-5 mb-0">
      <%= User.type %>
    </p>
  </div>
  <div class="icons fs-14 p-relative">
    <p class="c-grey fs-13 mt-0 mb-0">
      <%= User.email %>
    </p>
  </div>
  <div class="mt-3 row">
    <% if(User.isAdmin === true){ %>
    <div class="col-6">
      <a class="btn btn-dark w-100 text-light" id="delete" data-id="<%= User._id %>"> Delete</a>
    </div>
    <% } %>
    <div  class="col-6">
      <a class="btn btn-dark w-100 text-light" id="" href="/admin/orders/<%=User._id%>"> Orders</a>
    </div>
  </div>
</div>