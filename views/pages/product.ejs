                <div class="carousel-item ">
                  <div class="single_product_image_for_mobile">
                    <img src="<%= product.Image %>" alt="" srcset="">
                  </div>
                </div>
    
                <!-- carousel 5 -->
                <div class="carousel-item ">
                  <div class="single_product_image_for_mobile">
                    <img src="<%= product.Image %>" alt="" srcset="">
                  </div>
                </div>
    
                <!-- carousel 6 -->
                <div class="carousel-item ">
                  <div class="single_product_image_for_mobile">
                    <img src="<%= product.Image %>" alt="" srcset="">
                  </div>
                </div>
    
                <!-- control carousel  -->
    
                <button class="carousel-control-prev" type="button" data-bs-target="#mobile_carsouel_single_product"
