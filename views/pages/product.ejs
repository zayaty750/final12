                  <span class="carousel-control-prev-icon btn btn-dark" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mobile_carsouel_single_product"
                  data-bs-slide="next">
                  <span class="carousel-control-next-icon btn btn-dark" aria-hidden="true"></span>
                </button>
              </div>
            </div>
          </section>
          <!-- end -->
          <!-- product info -->
          <div class="container bg-white col-sm-4 col-12 p-3  ">
            <div class="sticky-top">
    
              <h4 class="text-black" style="font-size: 2.25rem;"><%= product.pname %></h4>
    
              <div class="container mb-5">
                <h5 class="text-secondary "><%= product.Price %></h5>
              </div>
    
              <div class="container mb-3 ">
                <span class="text-dark  ">
                  <i class="fa-solid fa-star" style="color: #ffea00;"></i>
                  <i class="fa-solid fa-star" style="color: #ffea00;"></i>
                  <i class="fa-solid fa-star" style="color: #ffea00;"></i>
                  <i class="fa-solid fa-star" style="color: #ffea00;"></i>
                  <i class="fa-sharp fa-regular fa-star"></i> (234)
                </span>
              </div>
    
              <div class="container mb-3 border-top pt-2">
                <span class="text-secondary"><%= product.Description %></span>
              </div>
    
              <div class="container mb-3 border-top pt-2">
                <span class="text-secondary"><%= product.category %></span>
              </div>
    
              <div class="container mb-3 d-flex justify-content-end  ">
                <button class="btn btn-dark  m-2"  href="/user/add-to-cart/<%= product._id %>">Add To Cart</button>
              </div>
    
            </div>
    
          </div>
        </div>
