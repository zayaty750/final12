          <!-- end -->
          <!-- images for mobile -->
          <!-- carousel product slider for mobile -->
          <section class=" d-block d-sm-none  mb-3">
            <div id="mobile_carsouel_single_product" class="carousel slide">
              <div class="carousel-inner">
                <!-- carousel 1 -->
                <div class="carousel-item active">
                  <div class="single_product_image_for_mobile">
                    <img src="<%= product.Image %>" alt="" srcset="" class="">
                  </div>
                </div>
    
