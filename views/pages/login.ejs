<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/Head.ejs") %>
</head>

<body>
    <%- include("../partials/Nav.ejs") %>
        <div class="container-fluid p-5">
            <div class="row no-gutter">
                <!-- The image half -->
                <div class="col-md-6 d-none d-md-flex bg-image" style="background-image: url(/images/photo5.jpg);">

                </div>
                <!-- The content half -->
                <div class="col-md-6 bg-light ">

                    <div class="container " id="Signup">
                        <div class="row ms-5">
                            <div class="col-lg-10 col-xl-7 ">
                                <% if(message===undefined){ }else{ %>

                                    <div class="alert alert-warning alert-dismissible show" role="alert">
                                        <strong>ERROR</strong>
                                        <%= message %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                    </div>

                                    <% } %>
                                <h3 class="display-4">Login!</h3>
                                <p class="text-muted mb-4">Login to Blankoo.</p>

                                

                                <form action="/user/Login" method="post" >
                                    <div class="form-group mb-3">
                                        <input id="User" type="text" placeholder="UserName" name="username" autofocus=""
                                            class="form-control rounded-pill border-0 shadow-sm px-4">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input id="Password" type="password" name="password" placeholder="Password"
                                            class="form-control rounded-pill border-0 shadow-sm px-4 ">
                                    </div>
                                    <!-- <% if(message === undefined){

                                    }else{ %>
                                        <h6 class="text-danger mb-2 mt-2 ms-3" style ="font-size: small;"><%= message %></h6>
                                   <% } %> -->
                                    <div class="custom-control custom-checkbox mb-3">
                                        <input id="" type="checkbox" checked class="custom-control-input">
                                        <label for="" class="custom-control-label">Remember password</label>
                                    </div>
                                    
                                    <button type="submit"
                                        class="btn btn-dark btn-block text-uppercase mb-2 rounded-pill shadow-sm" >Login</button>
                                </form>
                                <div class="text-center d-flex justify-content-between mt-3">
                                    <p>Create a new account?<a class="font-italic text-muted" href="/user/Signin" >
                                            click here <u></u></a></p>
                                </div>
                                <div class="text-center d-flex justify-content-between" >
                                    <p>Forget Password?<a class="font-italic text-muted" href="/user/forgot-password"> 
                                     Click Here <u></u></a></p>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <!-- End -->
                </div><!-- End -->

            </div>
        </div>
        <!-- end -->
        <%- include("../partials/Top_Function.ejs") %>
        <%- include("../partials/Footer.ejs") %>
</body>

</html>